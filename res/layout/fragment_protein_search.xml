<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.actionbartabs.MainActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
<!--         <TextView
        android:id="@+id/protein_search_header" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:text="@string/search_protein" /> -->
    
    <EditText
        android:id="@+id/protein_name_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="@string/protein_name_hint" />
    
     <Button 
        android:id="@+id/protein_search_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_below="@id/protein_name_search"
        android:layout_marginTop="5dp"
        android:text="Search by Protein Name" />
    
    <TextView
    	android:id="@+id/or_separator"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center"
    	android:layout_below="@id/protein_search_btn"
    	android:paddingTop="10dp"
    	android:textSize="18sp"
    	android:text="@string/or" 
    	/>
    
    <EditText
        android:id="@+id/uniprot_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/or_separator"
        android:layout_marginTop="10dp"
        android:hint="@string/uniprot_hint" />
    
    
    <Button 
        android:id="@+id/id_search_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_below="@id/uniprot_search"
        android:layout_marginTop="5dp"
        android:text="Search By ID" />
    

</RelativeLayout>
