<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.bindingdb.bindingdb"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.bindingdb.bindingdb.splash"
            android:label="@string/app_name" >
                                   	<intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            </activity>
        <activity
            android:name="org.bindingdb.bindingdb.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="org.bindingdb.bindingdb.SearchResult"
            android:label="@string/app_name"
            android:parentActivityName="org.bindingdb.bindingdb.MainActivity" >
        </activity>
        <activity
            android:name="org.bindingdb.bindingdb.TestActivity"
            android:label="@string/title_activity_test" >
        </activity>
    </application>

</manifest>
